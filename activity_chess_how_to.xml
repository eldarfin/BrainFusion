<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brainfusion.eldarfin.brainfusion.ChessHowToActivity"
    android:background="@drawable/chesshowto1"
    android:id="@+id/ChessHowToLayout">


    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/rightButton"
        android:src="@drawable/rightarrowanimation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/leftButton"
        android:src="@drawable/leftarrowanimation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
