package com.brainfusion.eldarfin.brainfusion;

/**
 * Created by selin
 */

import java.io.IOException;


public class RiddlePlay{

    TextReader tr;
    Object question,
            answer;


    RiddlePlay()
    {
        tr = new TextReader();
        question = null;
        answer = null;
    }

    public Object getAnswer() throws IOException {
        // TODO Auto-generated method stub
        return answer;
    }


    public void setAnswer() {
        // TODO Auto-generated method stub
        answer = tr.getAnswer();
    }


    public Object getQuestion() {
        // TODO Auto-generated method stub
        return question;
    }


    public void setQuestion() {
        // TODO Auto-generated method stub
        question = tr.getQuestion();
    }


    public boolean isTrue() {
        // TODO Auto-generated method stub
        return answer == getUserInput();
    }


    public Object getUserInput() {
        // TODO Auto-generated method stub
        return null;
    }



}
