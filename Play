public interface Play {
	
	public Object getAnswer(); // Will be used in all Play Classes
	
	public void setAnswer(Object o);//Only be used in classes which use txtReader
	
	public Object getQuestion();//Will be used in all Play Classes
	
	public void setQuestion(Object o); //Only be used in classes which use txtReader
	
	public boolean isTrue(); // All Classes
	
	public Object getUserInput(); // All Classes
	
	public Object getQuestion(int state);//Only in MathPlay
}

