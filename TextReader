import java.io.*;

/**
 * Created by Eldarfin on 26.04.2015.
 */
public class TxtReader implements Serializable{

    //Properties
    int qNum;
    String question, answer;
    File questionFile, playerData, answerFile;


    TxtReader(){
        question = "";
        answer = "";
        qNum = 1;
        questionFile = new File("c:/Users/Eldarfin/IdeaProjects/questions");
        answerFile = new File("c:/Users/Eldarfin/IdeaProjects/answers");
        playerData = new File("c:/Users/Eldarfin/IdeaProjects/player1");
    }

    public void readQuestion() throws IOException{

        try(LineNumberReader lnr = new LineNumberReader(new FileReader(questionFile))){
            StringBuffer sb = new StringBuffer();
            for(String line = null; (line = lnr.readLine()) != null ;){
                if(lnr.getLineNumber() == qNum){
                    sb.append(line).append(File.pathSeparatorChar);
                }
            }
            question = sb.toString();
            question = question.substring(3,question.length()-2);
        }

    }

    public String getQuestion(){
        return question;
    }

}
